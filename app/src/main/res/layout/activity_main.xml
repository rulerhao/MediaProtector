<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">


    <!-- ===== Browse Date / Folder sub-tabs (visible in Original mode only) ===== -->
    <LinearLayout
        android:id="@+id/browseModeBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorToolbar"
        android:visibility="gone">

        <!-- Date tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBrowseModeDate"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="@string/browse_tab_date"
                android:textColor="?attr/colorToolbarText"
                android:textSize="12sp"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <View
                android:id="@+id/indicatorBrowseDate"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/tab_indicator"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Folder tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBrowseModeFolder"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="@string/browse_tab_folder"
                android:textColor="@color/tab_unselected"
                android:textSize="12sp"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <View
                android:id="@+id/indicatorBrowseFolder"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/tab_indicator"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

    <!-- ===== Content area ===== -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Protected mode: flat grid -->
        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"
            android:horizontalSpacing="2dp"
            android:verticalSpacing="2dp"
            android:stretchMode="columnWidth" />

        <!-- Original mode: browse list -->
        <ListView
            android:id="@+id/browseListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="?attr/colorDivider"
            android:dividerHeight="1dp"
            android:background="?android:attr/colorBackground"
            android:visibility="gone" />

        <!-- Shared loading / empty indicators -->
        <ProgressBar
            android:id="@+id/browseProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/label_no_files"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="16sp"
            android:gravity="center"
            android:visibility="gone" />

        <!-- ===== Settings page (inside content area, hidden by default) ===== -->
        <ScrollView
            android:id="@+id/settingsPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/colorBackground"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Dark mode row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:background="?attr/colorSurface"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_dark_mode"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/switchDarkMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorDivider" />

                <!-- Security section header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_security"
                    android:textColor="@color/tab_indicator"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <!-- PIN lock row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:background="?attr/colorSurface">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_pin_lock"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/switchPinLock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorDivider" />

                <!-- Fingerprint row -->
                <LinearLayout
                    android:id="@+id/fingerprintRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:background="?attr/colorSurface"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_fingerprint"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/switchFingerprint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:id="@+id/fingerprintDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorDivider"
                    android:visibility="gone" />

                <!-- Change PIN row -->
                <LinearLayout
                    android:id="@+id/changePinRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp"
                    android:background="?attr/colorSurface"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/settings_change_pin"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:id="@+id/changePinDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorDivider"
                    android:visibility="gone" />

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

    <!-- ===== Selection bottom bar (hidden when not selecting) ===== -->
    <LinearLayout
        android:id="@+id/selectionBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="?attr/colorSurface"
        android:elevation="8dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btnSelectAll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/btn_select_all"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="13sp"
            android:background="?android:attr/selectableItemBackground" />

        <Button
            android:id="@+id/btnExport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/btn_export"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="13sp"
            android:background="?android:attr/selectableItemBackground"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnEncrypt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/btn_encrypt_selected"
            android:background="@color/action_encrypt"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- ===== Bottom Navigation Bar ===== -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="?attr/colorToolbar"
        android:elevation="8dp">

        <!-- Protected nav item -->
        <LinearLayout
            android:id="@+id/navProtected"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/navProtectedIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_nav_protected"
                android:tint="@color/tab_indicator" />

        </LinearLayout>

        <!-- Original nav item -->
        <LinearLayout
            android:id="@+id/navOriginal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/navOriginalIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_nav_original"
                android:tint="@color/tab_unselected" />

        </LinearLayout>

        <!-- Settings nav item -->
        <LinearLayout
            android:id="@+id/navSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/navSettingsIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_nav_settings"
                android:tint="@color/tab_unselected" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
