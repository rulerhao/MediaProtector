<resources>

    <!-- ===== Dark theme (default) ===== -->
    <style name="Theme.Minimal.Dark" parent="android:Theme.Material.NoActionBar">
        <!-- Window / content -->
        <item name="android:colorBackground">#121212</item>
        <item name="android:windowBackground">#121212</item>
        <item name="android:textColorPrimary">#E8EAED</item>
        <item name="android:textColorSecondary">#9AA0A6</item>
        <!-- Status / nav bars -->
        <item name="android:statusBarColor">#263238</item>
        <item name="android:navigationBarColor">#121212</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Toolbar custom attrs -->
        <item name="colorToolbar">#263238</item>
        <item name="colorToolbarText">#FFFFFF</item>
        <item name="colorToolbarIcon">#B0BEC5</item>
        <!-- Surface custom attrs -->
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorDivider">#2C2C2C</item>
        <item name="colorThumbPlaceholder">#2C2C2C</item>
    </style>

    <!-- ===== Light theme ===== -->
    <style name="Theme.Minimal.Light" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Window / content -->
        <item name="android:colorBackground">#ECEFF1</item>
        <item name="android:windowBackground">#ECEFF1</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#607D8B</item>
        <!-- Status / nav bars â€” white toolbar, so use light status bar icons -->
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:navigationBarColor">#ECEFF1</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Toolbar custom attrs -->
        <item name="colorToolbar">#FFFFFF</item>
        <item name="colorToolbarText">#212121</item>
        <item name="colorToolbarIcon">#546E7A</item>
        <!-- Surface custom attrs -->
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorDivider">#CFD8DC</item>
        <item name="colorThumbPlaceholder">#CFD8DC</item>
    </style>

    <!-- Manifest alias; activities override via ThemeHelper.applyTheme() -->
    <style name="Theme.Minimal" parent="Theme.Minimal.Dark" />

</resources>
