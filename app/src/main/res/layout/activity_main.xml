<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@color/background_grey_dark">

        <Switch
            android:id="@+id/modeSwitch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/view_mode_encrypted"
            android:checked="true" />

        <Button
            android:id="@+id/btnSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_sort"
            style="?android:attr/buttonStyleSmall" />

        <Button
            android:id="@+id/btnBrowseFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_browse"
            style="?android:attr/buttonStyleSmall" />

        <Button
            android:id="@+id/btnSelectAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_select_all"
            android:visibility="gone"
            style="?android:attr/buttonStyleSmall" />

    </LinearLayout>

    <Button
        android:id="@+id/btnEncrypt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_encrypt_selected"
        android:background="@color/primary_red"
        android:textColor="@color/white"
        android:visibility="gone"
        android:layout_margin="8dp" />

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="3"
        android:horizontalSpacing="4dp"
        android:verticalSpacing="4dp"
        android:padding="4dp"
        android:clipToPadding="false" />

</LinearLayout>
