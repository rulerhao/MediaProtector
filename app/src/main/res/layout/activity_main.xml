<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <!-- ===== Toolbar ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:background="?attr/colorToolbar">

        <!-- Spacer pushes action buttons to the right -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_sort"
            android:textColor="?attr/colorToolbarIcon"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnBrowseFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_browse"
            android:textColor="?attr/colorToolbarIcon"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#x2699;"
            android:textColor="?attr/colorToolbarIcon"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- ===== Protected / Original mode tabs ===== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorToolbar">

        <!-- Protected tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnModeProtected"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/tab_protected"
                android:textColor="?attr/colorToolbarText"
                android:textSize="13sp"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <View
                android:id="@+id/indicatorProtected"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/tab_indicator"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Original tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnModeOriginal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/tab_original"
                android:textColor="@color/tab_unselected"
                android:textSize="13sp"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <View
                android:id="@+id/indicatorOriginal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/tab_indicator"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

    <!-- ===== Browse Date / Folder sub-tabs (visible in Original mode only) ===== -->
    <LinearLayout
        android:id="@+id/browseModeBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorToolbar"
        android:visibility="gone">

        <!-- Date tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBrowseModeDate"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="@string/browse_tab_date"
                android:textColor="?attr/colorToolbarText"
                android:textSize="12sp"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <View
                android:id="@+id/indicatorBrowseDate"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/tab_indicator"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Folder tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBrowseModeFolder"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="@string/browse_tab_folder"
                android:textColor="@color/tab_unselected"
                android:textSize="12sp"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <View
                android:id="@+id/indicatorBrowseFolder"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/tab_indicator"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

    <!-- ===== Content area ===== -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Protected mode: flat grid -->
        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"
            android:horizontalSpacing="2dp"
            android:verticalSpacing="2dp"
            android:stretchMode="columnWidth" />

        <!-- Original mode: browse list -->
        <ListView
            android:id="@+id/browseListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="?attr/colorDivider"
            android:dividerHeight="1dp"
            android:background="?android:attr/colorBackground"
            android:visibility="gone" />

        <!-- Shared loading / empty indicators -->
        <ProgressBar
            android:id="@+id/browseProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/label_no_files"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="16sp"
            android:gravity="center"
            android:visibility="gone" />

    </FrameLayout>

    <!-- ===== Selection bottom bar (hidden when not selecting) ===== -->
    <LinearLayout
        android:id="@+id/selectionBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="?attr/colorSurface"
        android:elevation="8dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btnSelectAll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/btn_select_all"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="13sp"
            android:background="?android:attr/selectableItemBackground" />

        <Button
            android:id="@+id/btnEncrypt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/btn_encrypt_selected"
            android:background="@color/action_encrypt"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
