<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/colorBackground">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:background="?attr/colorToolbar">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/browse_title"
            android:textColor="?attr/colorToolbarText"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Mode tabs (Date / Folder) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorToolbar">

        <!-- Date tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnModeDate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/browse_tab_date"
                android:textColor="?attr/colorToolbarText"
                android:textSize="13sp"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <View
                android:id="@+id/indicatorDate"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/tab_indicator"
                android:visibility="invisible" />

        </LinearLayout>

        <!-- Folder tab -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnModeFolder"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/browse_tab_folder"
                android:textColor="?attr/colorToolbarText"
                android:textSize="13sp"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <View
                android:id="@+id/indicatorFolder"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/tab_indicator"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <!-- Content area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/browseList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="?attr/colorDivider"
            android:dividerHeight="1dp"
            android:background="?android:attr/colorBackground" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/browse_empty"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="16sp"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>
